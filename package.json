{
  "name": "@banejs/logger",
  "version": "1.0.0-beta.3",
  "description": "BaneJS Logger",
  "scripts": {
    "test": "npm run test:type-check && npm run test:tslint && npm run test:jest",
    "test:type-check": "tsc --noEmit",
    "test:tslint": "tslint --project tsconfig.json --format stylish",
    "test:jest": "jest --coverage --detectOpenHandles",
    "build": "npm run build:clean && npm run build:types && npm run build:js && npm run build:copy",
    "build:clean": "rm -rf ./build",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir build --extensions \".ts,.tsx\"",
    "build:copy": "cp package.json README.md CHANGELOG.md LICENSE build",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/banejs/logger.git"
  },
  "keywords": [
    "banejs",
    "logger",
    "typescript"
  ],
  "author": "Anton Drobot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/banejs/logger/issues"
  },
  "homepage": "https://github.com/banejs/logger#readme",
  "devDependencies": {
    "@babel/cli": "~7.2.3",
    "@babel/core": "~7.2.2",
    "@babel/plugin-proposal-class-properties": "~7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "~7.2.0",
    "@babel/preset-env": "~7.2.3",
    "@babel/preset-typescript": "~7.1.0",
    "@types/node": "~10.12.18",
    "babel-core": "~7.0.0-bridge.0",
    "babel-jest": "~23.6.0",
    "conventional-changelog-cli": "~2.0.11",
    "husky": "~1.3.1",
    "jest": "~23.6.0",
    "tslint": "~5.12.0",
    "typescript": "~3.2.2"
  },
  "dependencies": {
    "chalk": "~2.4.2"
  }
}

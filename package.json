{
  "name": "@banejs/logger",
  "version": "1.0.0-beta.3",
  "description": "BaneJS Logger",
  "scripts": {
    "test": "npm run type-check && npm run tslint && npm run jest",
    "type-check": "tsc --noEmit",
    "tslint": "tslint --project tsconfig.json --format stylish",
    "jest": "jest --coverage --detectOpenHandles",
    "build": "npm run build:clean && npm run build:types && npm run build:js",
    "build:clean": "rm -rf ./build",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir build --extensions \".ts,.tsx\"",
    "github": "npm run github:tag && npm run github:push",
    "github:tag": "git tag v$npm_package_version",
    "github:push": "git push --tags",
    "prepublish-package": "npm run test && npm run build && npm run prepublish-package:copy && npm run github",
    "prepublish-package:copy": "cp ./package.json README.md LICENSE build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/banejs/logger.git"
  },
  "keywords": [
    "banejs",
    "logger",
    "typescript"
  ],
  "author": "Anton Drobot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/banejs/logger/issues"
  },
  "homepage": "https://github.com/banejs/logger#readme",
  "devDependencies": {
    "@babel/cli": "~7.2.3",
    "@babel/core": "~7.2.2",
    "@babel/plugin-proposal-class-properties": "~7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "~7.2.0",
    "@babel/preset-env": "~7.2.3",
    "@babel/preset-typescript": "~7.1.0",
    "@types/node": "~10.12.18",
    "babel-core": "~7.0.0-bridge.0",
    "babel-jest": "~23.6.0",
    "jest": "~23.6.0",
    "tslint": "~5.12.0",
    "typescript": "~3.2.2"
  },
  "dependencies": {
    "chalk": "~2.4.2"
  }
}
